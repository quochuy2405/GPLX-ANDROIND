<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A1_Test">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"

        />

    <TextView
        android:id="@+id/text_choice_category"
        style="@style/TextTitle"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/button_radius_10"
        android:backgroundTint="@color/green_main"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:text="HẠNG A1"
        android:textColor="@color/white"
        android:textSize="22sp">

    </TextView>

    <TextView
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_choice_category"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_radius_10"
        android:backgroundTint="@color/green_main"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:text="@string/list_guide_line"
        android:textColor="@color/white">

    </TextView>

    <ScrollView
        android:id="@+id/scroll_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guideline"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:overScrollMode="always">

        <RelativeLayout
            android:id="@+id/list_choice_category"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/btn_a1"
                style="@style/AroundButton"
                android:layout_height="140dp"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">

                <TextView
                    android:id="@+id/title_a1"
                    style="@style/TextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_a1"
                    android:text="Bằng A1"

                    android:textColor="@color/white">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Xe máy"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_a2"
                style="@style/AroundButton"
                android:layout_height="140dp"
                android:layout_toEndOf="@+id/btn_a1"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">

                <TextView
                    android:id="@+id/title_a2"
                    style="@style/TextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_a2"
                    android:text="Bằng A2"
                    android:textColor="@color/white">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Xe mô tô"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_b1"
                style="@style/AroundButton"
                android:layout_height="140dp"
                android:layout_below="@+id/btn_a1"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">

                <TextView
                    android:id="@+id/title_b1"
                    style="@style/TextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_b1"
                    android:text="Bằng B1"
                    android:textColor="@color/white">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Ô tô dưới 3.5 tấn"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_b2"
                style="@style/AroundButton"
                android:layout_height="140dp"
                android:layout_alignTop="@+id/btn_b1"
                android:layout_toEndOf="@id/btn_b1"

                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main">

                <TextView
                    android:id="@+id/title_b2"
                    style="@style/TextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_b2"
                    android:text="Bằng B2"

                    android:textColor="@color/white">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_b2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Ô tô 9 chỗ"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <include layout="@layout/activity_navigation" />
</RelativeLayout>