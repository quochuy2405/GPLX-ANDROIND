<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCategory">
    <include layout="@layout/activity_navigation" />
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:background="@drawable/br_edit_profile">

        <TextView
            android:id="@+id/text_app"
            style="@style/TextAppName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:text="Edit profile"
            android:textSize="20dp"
            android:textAlignment="center">

        </TextView>

    </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:layout_below="@+id/header"
       />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="100px"
        android:padding="40dp"
         >
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/tv_name"
           android:textSize="18dp"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:text="Name"/>
        <EditText
            android:id="@+id/edit_email_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_name"
            android:background="@drawable/br_input"
            android:hint="Name"
            android:layout_marginBottom="15dp"
            android:inputType="text"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <TextView
            android:layout_below="@id/edit_email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_lastname"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Last name"/>
        <EditText
            android:id="@+id/edit_lastname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_lastname"
            android:layout_marginBottom="15dp"
            android:background="@drawable/br_input"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:hint="Last name"
            android:paddingRight="30dp" />
        <TextView
            android:layout_below="@id/edit_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email_profile"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Email"/>

        <EditText
            android:id="@+id/email_profile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_email_profile"
            android:layout_marginBottom="15dp"
            android:background="@drawable/br_input"
            android:paddingLeft="30dp"
            android:hint="example@gmail.com"
            android:paddingRight="30dp" />
        <Button
            android:id="@+id/btn_signup"
            style="@style/ButtonRouder"
            android:background="@drawable/br_button2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/email_profile"
            android:layout_width="match_parent"
            android:text="Save Changes"

            android:textSize="17dp"
            android:layout_height="50dp"/>

    </RelativeLayout>



</RelativeLayout>