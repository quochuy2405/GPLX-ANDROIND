<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCategory">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/header_background">

        <TextView
            android:id="@+id/text_app"
            style="@style/TextAppName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:text="@string/app_name"
            android:textAlignment="center">

        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_choice_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_margin="20sp"
        android:layout_marginBottom="10dp"
        android:text="Chọn loại bằng bạn muốn"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp">

    </TextView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_choice_category"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:overScrollMode="always">

        <RelativeLayout
            android:id="@+id/list_choice_category"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/btn_a1"
                style="@style/AroundButton"
                android:background="@drawable/maskgroup2"
                >

                <TextView
                    android:id="@+id/title_a1"
                    style="@style/TextCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_a1"
                    android:text="Bằng A1">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Xe máy"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btn_a2"
                style="@style/AroundButton"
                android:background="@drawable/mask_group"
                android:layout_toEndOf="@+id/btn_a1">

                <TextView
                    android:id="@+id/title_a2"
                    style="@style/TextCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_a2"
                    android:text="Bằng A2">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Xe mô tô"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_b1"
                style="@style/AroundButton"
                android:background="@drawable/mask_group"
                android:layout_below="@+id/btn_a1">

                <TextView
                    android:id="@+id/title_b1"
                    style="@style/TextCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_b1"
                    android:text="Bằng B1">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:text="Ô tô dưới 3.5 tấn"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_b2"
                style="@style/AroundButton"
                android:layout_alignTop="@+id/btn_b1"
                android:layout_toEndOf="@id/btn_b1"

                android:background="@drawable/maskgroup2">

                <TextView
                    android:id="@+id/title_b2"
                    style="@style/TextCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_description_b2"
                    android:text="Bằng B2">

                </TextView>

                <TextView
                    android:id="@+id/tv_description_b2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Ô tô 9 chỗ"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/activity_navigation" />

</RelativeLayout>