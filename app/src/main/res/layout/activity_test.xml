<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".Splash">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/progress_bar"
        android:padding="10dp"
        android:layout_height="0.5in">

        <LinearLayout
            android:id="@+id/number_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView

                style="@style/TextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="10" />

            <TextView
              android:textColor="@color/white"
                style="@style/TextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/" />

            <TextView
                android:textColor="@color/white"
                style="@style/TextQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="50" />
        </LinearLayout>
        <ProgressBar
            android:layout_below="@+id/number_question"
            android:id="@+id/determinateBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progressDrawable="@drawable/progress_custom"
            android:progress="20"/>

    </RelativeLayout>

 <TextView
     android:layout_below="@+id/progress_bar"
     android:id="@+id/question"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="Câu 10. Bạn đẫ biết đi xe chưa"
     android:padding="20dp"
     android:minHeight="1in"
     android:textColor="@color/white"
     style="@style/TextQuestion"
     >

 </TextView>
    <RelativeLayout
        android:layout_below="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btn_A"
            style="@style/ButtonRouder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/br_button2"
            android:text="A ..."
            android:textSize="17dp" />
        <Button
            android:id="@+id/btn_B"
            style="@style/ButtonRouder"
            android:layout_below="@id/btn_A"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/br_button2"
            android:text="B ..."
            android:textSize="17dp" />
        <Button
            android:id="@+id/btn_C"
            android:layout_below="@id/btn_B"
            style="@style/ButtonRouder"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/br_button2"
            android:text="C ..."
            android:textSize="17dp" />
        <Button
            android:id="@+id/btn_D"
            style="@style/ButtonRouder"
            android:layout_below="@id/btn_C"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/br_button2"
            android:text="D ..."
            android:textSize="17dp" />

    </RelativeLayout>


    <include layout="@layout/activity_navigation" />
</RelativeLayout>