<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextQuestion" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="InputField" parent="android:Widget.TextView">
        <item name="android:height">50dp</item>
    </style>
    <style name="Widget.BottomNavigationView"  parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/readexopro_regular</item>
    </style>
    <style name="QuestionButton"  parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:fontFamily">@font/readexopro_regular</item>
        <item name="android:backgroundTint">@color/green_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:width">55dp</item>
        <item name="android:height">55dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/radius_around</item>
    </style>
    <style name="TextAppName" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AroundButton" parent="android:Widget.TextView">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextTitle" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">0.14in</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextTitleTablet" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">0.3in</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextDescription" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">0.12in</item>
    </style>
    <style name="ImageRounder" parent="android:Widget.ImageWell">
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@drawable/avatar_radius</item>
    </style>
    <style name="ImageRounder_10" parent="android:Widget.ImageWell">
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@drawable/button_radius_10</item>
    </style>
    <style name="TitleActivityName" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="PersonName" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonRouder" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="android:background">@drawable/button_radius</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:backgroundTint">@color/green_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="radiusTopRightLeft" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@drawable/radius</item>

    </style>
    <style name="EditTextRouder" parent="">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/text_radius</item>
    </style>
    <style name="Theme.Design.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/readexopro_regular</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>