<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/check_out_focus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team2.mobileapp.gplx.view.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/mask_group">

        <TextView
            android:id="@+id/tv_app"
            style="@style/TextAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:text="TRANG CÁ NHÂN"
            android:textAlignment="center"
            android:textSize="40dp">

        </TextView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-70dp"
        android:src="@drawable/avatar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/avatar"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <RelativeLayout
            android:id="@+id/name_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/tv_last_name"
                    android:layout_width="1in"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Tên"
                    android:textColor="@color/black"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/tv_last_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/input_radius"
                    android:backgroundTint="#E6F3F3F3"
                    android:gravity="center_vertical"
                    android:hint="Họ tên"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="24dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_profile"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Tên đăng nhập"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/tv_username"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_radius"
            android:backgroundTint="#E6F3F3F3"
            android:enabled="true"
            android:hint="user"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="40dp"
            android:paddingRight="440dp"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/tv_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_username"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_email_profile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/tv_email_profile"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input_radius"
            android:backgroundTint="#E6F3F3F3"
            android:enabled="false"
            android:hint="example@gmail.com"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_save"
            style="@style/ButtonRouder"
            android:layout_width="3in"
            android:layout_height="80dp"
            android:layout_below="@+id/et_email_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/br_button2"
            android:gravity="center"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textSize="30dp" />
    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#83F8F8F8"
        android:padding="90dp"
        android:src="@raw/animation_done"
        android:visibility="invisible" />
    <Button
        android:id="@+id/logout"
        android:background="@drawable/button_radius_10"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#FF5722"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:text="Đăng xuất"
        android:textSize="20dp"/>

    <include
        android:id="@+id/bottom_bar"
        layout="@layout/activity_navigation" />
</RelativeLayout>