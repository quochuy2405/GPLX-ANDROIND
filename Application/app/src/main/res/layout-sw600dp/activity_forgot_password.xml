<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team2.mobileapp.gplx.view.ForgotPasswordActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_br"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="450sp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            android:src="@drawable/br_car2" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0.6in"
            android:layout_height="0.4in"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"></ImageView>
    </RelativeLayout>

    <RelativeLayout
        style="@style/radiusTopRightLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_br"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100px"
        android:backgroundTint="@color/gray_milk"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/title_forgot_pass"
            style="@style/TextTitle"
            android:layout_centerHorizontal="true"
            android:text="@string/text_forgot_pass"
            android:textSize="35dp">

        </TextView>

        <EditText
            android:id="@+id/edit_email_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/title_forgot_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/br_input"
            android:gravity="center_vertical"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_forgot_pass"
            style="@style/ButtonRouder"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/edit_email_forgot_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/br_button2"
            android:gravity="center"
            android:text="@string/text_send"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/logo_bottom"
            android:layout_width="0.6in"
            android:layout_height="0.3in"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"

            />
    </RelativeLayout>

</RelativeLayout>