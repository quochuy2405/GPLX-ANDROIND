<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/body_verify"
    tools:context="team2.mobileapp.gplx.view.VerifyActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_br"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/br_car2" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="0.8in"
            android:layout_height="0.8in"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"

            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/radiusTopRightLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_br"
        android:layout_marginTop="-100px"
        android:backgroundTint="@color/gray_milk"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/title_verification"
            style="@style/TextTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/text_verification"
            android:textSize="30dp"

            />

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/title_verification"
            android:layout_marginTop="30dp"
            android:background="@drawable/br_input"
            android:hint="Nhập mã code"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/no_give_code"
            style="@style/TextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_verify_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:text="CHƯA NHẬN ĐƯỢC MÃ CODE"
            android:textColor="@color/green_main"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_verify"
            style="@style/ButtonRouder"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/no_give_code"
            android:layout_marginTop="20dp"
            android:background="@drawable/br_button2"
            android:gravity="center"
            android:text="@string/text_verify"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/logo_bottom"
            android:layout_width="0.8in"
            android:layout_height="0.8in"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"

            />
    </RelativeLayout>

</RelativeLayout>