<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forgot_layouts"
    tools:context="team2.mobileapp.gplx.view.ForgotPasswordActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_br"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/br_car2" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"

            />
    </RelativeLayout>

    <RelativeLayout
        style="@style/radiusTopRightLeft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_br"
        android:layout_marginTop="-100px"
        android:backgroundTint="@color/gray_milk"
        android:paddingLeft="30dp"
        android:paddingTop="50dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/title_forgot_pass"
            style="@style/TextTitle"
            android:layout_centerHorizontal="true"
            android:text="@string/text_forgot_pass">

        </TextView>


        <EditText
            android:id="@+id/edit_email_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/title_forgot_pass"
            android:layout_marginTop="30dp"
            android:background="@drawable/br_input"
            android:hint="Email"
            android:inputType="text"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <Button
            android:id="@+id/btn_forgot_pass"
            style="@style/ButtonRouder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_email_forgot_pass"
            android:layout_marginTop="30dp"
            android:background="@drawable/br_button2"
            android:text="@string/text_send"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/logo_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"

            />
    </RelativeLayout>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/loading"
        android:padding="90dp"
        android:background="#83F8F8F8"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loading"
        />
</RelativeLayout>