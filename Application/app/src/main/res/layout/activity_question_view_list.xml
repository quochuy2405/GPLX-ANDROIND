<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".view.ReviewTestActivity"
   >


    <include
        android:id="@+id/header_activity"
        layout="@layout/header_activity_app" />

    <ListView
        android:layout_marginBottom="70dp"
        android:id="@+id/lvAllQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_activity"
        android:divider="@null"
        android:scrollbars="none"
        android:orientation="horizontal"
        tools:listitem="@layout/question_view_list_item"></ListView>

    <include
        android:id="@+id/layout"
        layout="@layout/activity_navigation" />


</RelativeLayout>