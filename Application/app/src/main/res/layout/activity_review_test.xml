<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context=".view.ReviewTestActivity"
    android:duplicateParentState="true" >


    <RelativeLayout
        android:id="@+id/header_activity"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="20dp">


        <ImageView
            android:id="@+id/logo_top_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"

            />

        <TextView
            android:id="@+id/tv_title_board"
            style="@style/TextTitle"
            android:layout_below="@+id/logo_top_board"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_radius"
            android:backgroundTint="@color/green_main"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:text="ÔN TẬP CÂU HỎI"
            android:textColor="@color/white"
            android:textSize="20dp"

            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_activity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="200dp">

            <RelativeLayout
                android:id="@+id/all_question"

                style="@style/AroundButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main"
                android:padding="30dp">

                <TextView
                    android:id="@+id/title_all_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toàn bộ câu hỏi"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_all_question"
                    android:text="Gồm 100 câu"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/concept"
                android:clickable="true"
                android:layout_below="@+id/all_question"
                style="@style/AroundButton"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main"
                >

                <TextView
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:id="@+id/title_concept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khái niệm">

                </TextView>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_below="@+id/title_concept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gồm 20 câu">

                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/culture"
                android:clickable="true"
                android:layout_below="@+id/concept"
                style="@style/AroundButton"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main"
                >

                <TextView
                    android:id="@+id/title_culture"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Văn hóa"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="23dp">

                </TextView>
                <TextView
                    android:textSize="15dp"

                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_below="@+id/title_culture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gồm 30 câu">

                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/figure"
                android:clickable="true"
                android:layout_below="@+id/culture"
                style="@style/AroundButton"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@drawable/button_radius_10"
                android:backgroundTint="@color/green_main"
                >

                <TextView
                    android:id="@+id/title_figure"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sa hình"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="23dp">

                </TextView>
                <TextView
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_below="@+id/title_figure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gồm 50 câu">

                </TextView>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <include
        android:id="@+id/layout"
        layout="@layout/activity_navigation" />


</RelativeLayout>